<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.year.afinal.studentadvice.PostAdvice">

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_AdviceHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#d3d3d3"
            android:inputType="text"
            android:hint="@string/postHeaderHint"/>

        <EditText
            android:id="@+id/editText_Advice"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:inputType="textImeMultiLine"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/postHint"
            android:background="#d3d3d3"
            android:gravity="top"/>


        <Button
            android:text="Post Advice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/buttonPostAdvice"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:onClick="onClickPostAdvice"/>
    </LinearLayout>
</ScrollView>
